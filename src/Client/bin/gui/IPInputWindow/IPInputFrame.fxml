<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="286.0" prefWidth="387.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.IPInputWindow.IPInputController">
   <children>
      <!-- Welcome Label -->
      <Label fx:id="welcomeLabel" ellipsisString="Welcome to Blib system" layoutX="110.0" layoutY="14.0" prefWidth="280.0" text="Welcome to Blib system">
         <font>
            <Font size="20.0" />
         </font>
         <style>
            -fx-background-color: #4e91f5; 
            -fx-text-fill: white; 
            -fx-font-weight: bold; 
            -fx-alignment: center;
         </style>
      </Label>

      <!-- Server IP Label -->
      <Label ellipsisString="Enter Server IP:" layoutX="14.0" layoutY="88.0" text="Enter Server IP:" />

      <!-- TextField for IP input -->
      <TextField fx:id="IPtxt" layoutX="135.0" layoutY="81.0" promptText="Ex: 127.0.0.1" stylesheets="@IPInputFrame.css" />

      <!-- Awaiting Login Text -->
      <Label fx:id="awaitingLoginText" layoutX="40.0" layoutY="120.0" textFill="RED">
         <font>
            <Font size="20.0" />
         </font>
      </Label>

      <!-- Send Button -->
      <Button id="btnSubscriberInfo" fx:id="btnSend" ellipsisString="Send" layoutX="333.0" layoutY="84.0" mnemonicParsing="false" onAction="#Send" text="Send" />

      <!-- Exit Button -->
      <Button id="btnExit" fx:id="btnExit" layoutX="358.0" layoutY="272.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />
   </children>
</AnchorPane>
