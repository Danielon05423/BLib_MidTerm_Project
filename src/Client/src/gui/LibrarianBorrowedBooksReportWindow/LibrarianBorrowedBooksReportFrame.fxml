        <BarChart fx:id="barChart" layoutX="3.0" layoutY="552.0" prefHeight="371.0" prefWidth="1425.0" stylesheets="@LibrarianSubscriberStatusReportFrame.css">
        
            <xAxis>
                <CategoryAxis fx:id="barXAxis" label="Categories" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="barYAxis" label="Value" />
            </yAxis>
        </BarChart>
        <TableView fx:id="bookDataTable" layoutX="50" layoutY="200" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100" />
            <TableColumn fx:id="bookNameColumn" text="Book Name" prefWidth="200" />
            <TableColumn fx:id="timesBorrowedColumn" text="Times Borrowed" prefWidth="100" />
            <TableColumn fx:id="earlyReturnsColumn" text="Early Returns" prefWidth="100" />
            <TableColumn fx:id="lateReturnsColumn" text="Late Returns" prefWidth="100" />
            <TableColumn fx:id="lostColumn" text="Lost" prefWidth="100" />
        </columns>
    </TableView>
        <!-- Buttons and ComboBox -->
        <Button fx:id="back" layoutX="1006.0" layoutY="20.0" mnemonicParsing="false" onAction="#back" text="Back" />
        <ComboBox fx:id="monthComboBox" layoutX="438.0" layoutY="45.0" prefWidth="150.0" />
      <Label layoutX="48.0" layoutY="103.0" text="Currently Frozen/Unfrozen Status" />
      <Label layoutX="513.0" layoutY="543.0" text="Monthly Frozen/Unfrozen Status" />
    </children>
</AnchorPane>
