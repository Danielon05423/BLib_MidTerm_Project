<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MyReservationsWindow.MyReservationsController">
   <children>
      <!-- Title Label -->
      <Label fx:id="title" layoutX="30.0" layoutY="52.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="My Reservations" />
      
      <!-- Back Button -->
      <Button fx:id="btnBack" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#getBackBtn" prefHeight="30.0" prefWidth="156.0" style="-fx-font-size: 14px;" text="Back" />

      <!-- Exit Button -->
      <Button fx:id="btnExit" layoutX="756.0" layoutY="10.0" mnemonicParsing="false" onAction="#getExitBtn" prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 14px;" text="Return to Main Menu" />

      <!-- TableView -->
      <TableView fx:id="tableView" layoutX="30.0" layoutY="86.0" prefHeight="500.0" prefWidth="940.0">
        <columns>
          <!-- Book ID Column -->
          <TableColumn fx:id="tableId" prefWidth="100.0" text="Book ID" />
          <!-- Book Name Column -->
          <TableColumn fx:id="tableName" prefWidth="330.0" text="Book Name" />
          <!-- Reserved Date Column -->
          <TableColumn fx:id="tableReservationDate" prefWidth="200.0" text="Reserved Date" />
          <!-- Actions Column -->
          <TableColumn fx:id="actions" prefWidth="320.0" text="Actions" />
        </columns>
      </TableView>
      <Label fx:id="feedBack" layoutX="450.0" layoutY="50.0" />
   </children>
</AnchorPane>
