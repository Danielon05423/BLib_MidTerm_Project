<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MyReservationsWindow.MyReservationsController">
   <children>
      <!-- Title Label -->
      <Label fx:id="title" layoutX="20.0" layoutY="58.0" text="My Reservations" />
      
      <!-- Back Button -->
      <Button fx:id="btnBack" layoutX="7.0" layoutY="8.0" mnemonicParsing="false" onAction="#getBackBtn" text="Back" />

      <!-- Exit Button -->
      <Button fx:id="btnExit" layoutX="763.0" layoutY="8.0" mnemonicParsing="false" onAction="#getExitBtn" text="Exit" />

      <!-- Refresh Button -->
      <Button fx:id="btnRefresh" layoutX="608.0" layoutY="46.0" mnemonicParsing="false" onAction="#getExitBtn" text="Refresh" />

      <!-- TableView -->
      <TableView fx:id="tableView" layoutX="20.0" layoutY="86.0" prefHeight="500.0" prefWidth="760.0">
        <columns>
          <!-- Book ID Column -->
          <TableColumn fx:id="tableId" prefWidth="100.0" text="Book ID" />
          <!-- Book Name Column -->
          <TableColumn fx:id="tableName" prefWidth="200.0" text="Book Name" />
          <!-- Reserved Date Column -->
          <TableColumn fx:id="tableReservationDate" prefWidth="150.0" text="Reserved Date" />
          <!-- Reservation Status Column -->
          <TableColumn fx:id="tableReservationStatus" prefWidth="150.0" text="Reservation Status" />
          <!-- Actions Column -->
          <TableColumn fx:id="actions" prefWidth="159.0" text="Actions" />
         
        </columns>
      </TableView>
   </children>
</AnchorPane>
