<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MyReservationsWindow.MyReservationsController">
   <children>
      <!-- Title Label -->
      <Label fx:id="title" layoutX="30.0" layoutY="58.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="My Reservations" />
      
      <!-- Back Button -->
      <Button fx:id="btnBack" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#getBackBtn" style="-fx-font-size: 16px;" text="Back" />

      <!-- Exit Button -->
      <Button fx:id="btnExit" layoutX="1350.0" layoutY="10.0" mnemonicParsing="false" onAction="#getExitBtn" style="-fx-font-size: 16px;" text="Exit" />

      <!-- Refresh Button -->
      <Button fx:id="btnRefresh" layoutX="1180.0" layoutY="46.0" mnemonicParsing="false" onAction="#getExitBtn" style="-fx-font-size: 16px;" text="Refresh" />

      <!-- TableView -->
      <TableView fx:id="tableView" layoutX="30.0" layoutY="100.0" prefHeight="650.0" prefWidth="1340.0">
        <columns>
          <!-- Book ID Column (Smaller) -->
          <TableColumn fx:id="tableId" prefWidth="100.0" text="Book ID" />
          <!-- Book Name Column (Smaller) -->
          <TableColumn fx:id="tableName" prefWidth="300.0" text="Book Name" />
          <!-- Reserved Date Column (Smaller) -->
          <TableColumn fx:id="tableReservationDate" prefWidth="200.0" text="Reserved Date" />
          <!-- Reservation Status Column (Larger) -->
          <TableColumn fx:id="tableReservationStatus" prefWidth="500.0" text="Reservation Status" />
          <!-- Actions Column -->
          <TableColumn fx:id="actions" prefWidth="240.0" text="Actions" />
        </columns>
      </TableView>
      <Label fx:id="feedBack" ellipsisString="" layoutX="601.0" layoutY="37.0" />
   </children>
</AnchorPane>
